@using RestaurantReviews.Models;
@model UserModel

@{
    ViewBag.Title = "User Information";
}

<script src="/Scripts/view/userPage.js" type="text/javascript"></script>

@section scripts {
    <script type="text/javascript">
        $(document).ready(function () {
            userPage.init(@Model.ID);
        });
    </script>
}

<h2>User Information</h2>

<div style="margin-top:20px;">
    Fields can be up to 40 characters.
</div>

<div class="validationFailed hidden" data-failed="1" style="margin-top:15px;"></div>

<div style="margin-top:20px;">
    <table class="userTable">
        <tr>
            <td>
                Username: <span class="red">*</span>
            </td>
            <td>
                <input id="txt_Username" type="text" value="@Model.Username" required />
            </td>
        </tr>
        <tr>
            <td>
                First Name: <span class="red">*</span>
            </td>
            <td>
                <input id="txt_FirstName" type="text" value="@Model.FirstName" required />
            </td>
        </tr>
        <tr>
            <td>
                Last Name: <span class="red">*</span>
            </td>
            <td>
                <input id="txt_LastName" type="text" value="@Model.LastName" required />
            </td>
        </tr>
        <tr>
            <td>
                Password: 
                @if (Model.ID == 0)
                {
                    <span class="red">*</span>
                }
            </td>
            <td>
                <input id="txt_Password" type="password" @((Model.ID == 0) ? "required" : "") />
            </td>
        </tr>
        <tr>
            <td>
                Repeat Password:
                @if (Model.ID == 0)
                {
                    <span class="red">*</span>
                }
            </td>
            <td>
                <input id="txt_PasswordRepeat" type="password" @((Model.ID == 0) ? "required" : "") />
            </td>
        </tr>
    </table>
</div>

<div style="margin-top:20px;">
    <button class="btn btn-lg" data-cancel="1">Cancel</button>
    <button class="btn btn-lg btn-primary" data-save="1">Save</button>
</div>