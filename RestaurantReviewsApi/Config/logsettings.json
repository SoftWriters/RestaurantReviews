{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Verbose",
      "Override": {
        "Microsoft": "Information",
        "System": "Information"
      }
    },
    "WriteTo:Async": {
      "Name": "Async",
      "Args": {
        "configure": [
          {
            "Name": "File",
            "Args": {
              "path": "C:\\Temp\\Config\\Logs\\RestaurantReviewAPi.log",
              "outputTemplate": "[{Timestamp:HH:mm:ss.fff}] {Level:u3} - {RequestContext} {Message} {NewLine}{Exception}"
            }
          }
        ]
      }
    }
  }
}

